{
  "$schema": "../node_modules/@tauri-apps/cli/schema.json",
  "productName": "AiDocPlus",
  "version": "0.1.3",
  "identifier": "com.aidocplus.app",
  "build": {
    "beforeDevCommand": "cd src-ui && pnpm dev",
    "beforeBuildCommand": "cd src-ui && pnpm build",
    "devUrl": "http://localhost:5173",
    "frontendDist": "../src-ui/dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "AiDocPlus - AI Document Editor",
        "width": 1400,
        "height": 900,
        "minWidth": 1000,
        "minHeight": 600,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "macOS": {
      "minimumSystemVersion": "10.13",
      "signingIdentity": "-"
    }
  },
  "plugins": {}
}
